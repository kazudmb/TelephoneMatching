<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="アカウント名"
                android:textSize="30sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                    android:id="@+id/evaluation1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/star_yellow"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/evaluation2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/star_yellow"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/evaluation3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/star_yellow"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/evaluation4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/star"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/evaluation5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/star"
                    android:adjustViewBounds="true"/>
            <TextView
                    android:id="@+id/generalEvaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.0"
                    android:textSize="30sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
            <TextView
                    android:id="@+id/numberOfEvaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(100)"
                    android:textSize="30sp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/button_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自己紹介文"
                android:textSize="20sp"
        />

    </LinearLayout>
</LinearLayout>